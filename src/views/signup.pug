extends layout

block content
  .container
    h1 Signup Page
    p= error
    br
    form(role='form', action="/signup",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Enter your full name')
      .form-group
          input.form-control(type='text', name="email", placeholder='Enter your email')
      .form-group
        input.form-control(type='password', name="password", placeholder='Enter your wanted password')
      input.form-control(type='hidden', name="redirect_uri", value=redirect_uri)
      button.btn.btn-default(type='submit') Sign Up
      a(href='/login?redirect_uri=' + redirect_uri)
        button.btn.btn-primary(type="button") Cancel
