{
  "apps" : [
    {
      "name"      : "youpin-api",
      "script"    : "src/",
      "no-daemon" : true,
      "log_date_format" : "YYYY-MM-DD HH:mm",
      "watch"     : true,
      "ignore_watch" : ["node_modules", "data", ".git"],
      "env": {
        NODE_ENV: "local"
      },
      "env_development": {
        NODE_ENV: "development"
      }
    }
  ],
  "deploy" : {
    "development" : {
      "user" : "root",
      "host" : ["128.199.87.142"],
      "ref"  : "origin/master",
      "repo" : "git@github.com:youpin-city/youpin-api.git",
      "path" : "/opt/api.youpin.city",
      "post-deploy" : "npm install --production && pm2 startOrRestart ecosystem.json --env development",
      "pre-deploy-local" : "echo '[development] deploy completed.'",
      "env"  : {
        NODE_ENV: "development"
      }
    }
  }
}
